loadstring([[

--=============================================
-- ‚ö° VELOZ.HUB ‚Äî RETR√ÅTIL NEON AMARELO (Mod by Godofredo)
-- UNIVERSAL ¬∑ ANTI-DELETE BRUTO ¬∑ DELTA MOBILE READY
--=============================================

local Players = game:GetService("Players")
local UIS = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local TweenService = game:GetService("TweenService")
local player = Players.LocalPlayer

-- garante PlayerGui (necess√°rio em v√°rios executores mobile)
repeat task.wait() until player and player:FindFirstChild("PlayerGui")

-- remove se existir (garante clean)
local function safeDestroy(inst)
    if inst and inst.Parent then
        pcall(function() inst:Destroy() end)
    end
end

-- fun√ß√£o que cria todo o hub (cham√°vel para anti-delete)
local function CriarHub()
    -- limpa vers√£o antiga
    safeDestroy(player.PlayerGui:FindFirstChild("VelozHub"))

    -- ================ ROOT GUI =================
    local Gui = Instance.new("ScreenGui")
    Gui.Name = "VelozHub"
    Gui.ResetOnSpawn = false
    Gui.IgnoreGuiInset = true
    Gui.Parent = player:WaitForChild("PlayerGui")
    Gui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

    -- ================ MAIN BUTTON (FLUTUANTE) =================
    local MainButton = Instance.new("TextButton")
    MainButton.Name = "VeloButton"
    MainButton.Size = UDim2.new(0,64,0,64)
    MainButton.Position = UDim2.new(0.86,0,0.68,0)
    MainButton.AnchorPoint = Vector2.new(0,0)
    MainButton.BackgroundColor3 = Color3.fromRGB(0,0,0)
    MainButton.AutoButtonColor = false
    MainButton.Text = "‚ö°"
    MainButton.TextColor3 = Color3.fromRGB(255,255,0)
    MainButton.TextScaled = true
    MainButton.Font = Enum.Font.GothamBlack
    MainButton.ZIndex = 50
    MainButton.Parent = Gui

    local btnCorner = Instance.new("UICorner", MainButton)
    btnCorner.CornerRadius = UDim.new(0,36)

    local btnStroke = Instance.new("UIStroke", MainButton)
    btnStroke.Color = Color3.fromRGB(255,255,0)
    btnStroke.Transparency = 0.6
    btnStroke.Thickness = 2

    local glowImg = Instance.new("ImageLabel", MainButton)
    glowImg.AnchorPoint = Vector2.new(0.5,0.5)
    glowImg.Position = UDim2.new(0.5,0,0.5,0)
    glowImg.Size = UDim2.new(2.2,0,2.2,0)
    glowImg.Image = "rbxassetid://1316045217"
    glowImg.BackgroundTransparency = 1
    glowImg.ZIndex = 48
    glowImg.ImageColor3 = Color3.fromRGB(255,255,0)
    glowImg.ImageTransparency = 0.8

    -- ================ PANEL (RETR√ÅTIL - ABRE/FECHA) =================
    local Panel = Instance.new("Frame")
    Panel.Name = "VeloPanel"
    Panel.Size = UDim2.new(0,360,0,320)
    Panel.Position = UDim2.new(0.28,0,0.18,0)
    Panel.BackgroundColor3 = Color3.fromRGB(15,15,15)
    Panel.BorderSizePixel = 0
    Panel.Visible = false
    Panel.ZIndex = 45
    Panel.Parent = Gui

    local panelCorner = Instance.new("UICorner", Panel)
    panelCorner.CornerRadius = UDim.new(0,12)

    -- glow back for neon effect
    local panelGlow = Instance.new("ImageLabel", Panel)
    panelGlow.AnchorPoint = Vector2.new(0.5,0.5)
    panelGlow.Position = UDim2.new(0.5,0,0.5,0)
    panelGlow.Size = UDim2.new(1.6,0,1.6,0)
    panelGlow.Image = "rbxassetid://1316045217"
    panelGlow.BackgroundTransparency = 1
    panelGlow.ImageColor3 = Color3.fromRGB(255,238,86) -- neon yellow
    panelGlow.ImageTransparency = 0.92
    panelGlow.ZIndex = 40

    -- header title (two lines)
    local Title = Instance.new("TextLabel", Panel)
    Title.Name = "Title"
    Title.Size = UDim2.new(1,0,0,48)
    Title.Position = UDim2.new(0,0,0,6)
    Title.BackgroundTransparency = 1
    Title.TextColor3 = Color3.fromRGB(255,255,255)
    Title.Text = "      Veloz.Hub\nmod by Godofredo"
    Title.TextYAlignment = Enum.TextYAlignment.Top
    Title.Font = Enum.Font.GothamBold
    Title.TextScaled = true
    Title.ZIndex = 46

    local headerStroke = Instance.new("UIStroke", Title)
    headerStroke.Color = Color3.fromRGB(255,238,86)
    headerStroke.Transparency = 0.6
    headerStroke.Thickness = 1.6

    -- panel top bar for retract animation (acts like handle)
    local TopBar = Instance.new("Frame", Panel)
    TopBar.Size = UDim2.new(1,0,0,48)
    TopBar.Position = UDim2.new(0,0,0,0)
    TopBar.BackgroundTransparency = 1
    TopBar.ZIndex = 47

    -- ================ SCROLL + GRID (DUAS COLUNAS) =================
    local Scroll = Instance.new("ScrollingFrame", Panel)
    Scroll.Name = "Scroll"
    Scroll.Position = UDim2.new(0,8,0,56)
    Scroll.Size = UDim2.new(1,-16,1,-64)
    Scroll.CanvasSize = UDim2.new(0,0,0,0)
    Scroll.AutomaticCanvasSize = Enum.AutomaticSize.Y
    Scroll.ScrollBarThickness = 4
    Scroll.BackgroundTransparency = 1
    Scroll.ZIndex = 44

    local UIGrid = Instance.new("UIGridLayout", Scroll)
    UIGrid.CellSize = UDim2.new(0,168,0,46)
    UIGrid.FillDirectionMaxCells = 2
    UIGrid.StartCorner = Enum.StartCorner.TopLeft
    UIGrid.Padding = UDim2.new(0,6,0,6)

    -- helper: create neon button
    local function MakeButton(text, callback)
        local B = Instance.new("TextButton")
        B.Parent = Scroll
        B.Size = UDim2.new(1,0,0,46)
        B.BackgroundColor3 = Color3.fromRGB(0,0,0)
        B.TextColor3 = Color3.fromRGB(255,255,255)
        B.Font = Enum.Font.GothamBold
        B.TextScaled = true
        B.Text = text
        B.AutoButtonColor = false
        B.ZIndex = 46

        local corner = Instance.new("UICorner", B)
        corner.CornerRadius = UDim.new(0,6)

        local stroke = Instance.new("UIStroke", B)
        stroke.Color = Color3.fromRGB(255,238,86)
        stroke.Transparency = 0.85
        stroke.Thickness = 1.8

        -- subtle neon bar
        local neonBar = Instance.new("Frame", B)
        neonBar.Size = UDim2.new(0,6,1,0)
        neonBar.Position = UDim2.new(0,0,0,0)
        neonBar.BackgroundColor3 = Color3.fromRGB(255,238,86)
        neonBar.BorderSizePixel = 0
        neonBar.ZIndex = 47

        -- pulse tween for neon bar & stroke
        local tweenInfo = TweenInfo.new(0.9, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut, -1, true)
        local t1 = TweenService:Create(neonBar, tweenInfo, {BackgroundTransparency = 0.35})
        local t2 = TweenService:Create(stroke, tweenInfo, {Transparency = 0.25})
        pcall(function() t1:Play(); t2:Play() end)

        -- events (multiple handlers)
        B.MouseButton1Click:Connect(function() pcall(callback) end)
        B.Activated:Connect(function() pcall(callback) end)
        return B
    end

    -- ================ FUNCTIONALITY: buttons as requested =================

    -- flags / vars for local features
    local flying = false
    local flySpeed = 40
    local noclip = false

    -- Fly loader (external) fallback safe toggles
    local function loadFly()
        local ok, _ = pcall(function()
            loadstring(game:HttpGet("https://pastebin.com/raw/YKL7EXeL"))()
        end)
        return ok
    end

    MakeButton("‚ö° Fly", function()
        local ok = loadFly()
        if not ok then
            flying = not flying
            flySpeed = 40
        end
    end)

    MakeButton("‚ö° Fly Vel 40", function()
        getgenv().FlySpeed = 40
        loadFly()
        flying = true; flySpeed = 40
    end)

    MakeButton("‚ö° Fly Vel 80", function()
        getgenv().FlySpeed = 80
        loadFly()
        flying = true; flySpeed = 80
    end)

    MakeButton("üí® Turbo (80)", function()
        local c = player.Character
        if c and c:FindFirstChild("Humanoid") then
            c.Humanoid.WalkSpeed = 80
        end
    end)

    MakeButton("üí• ESP", function()
        pcall(function()
            loadstring(game:HttpGet("https://raw.githubusercontent.com/K4LXT/ESP/main/ESP.lua"))()
        end)
    end)

    MakeButton("ü´• Invisibilidade", function()
        pcall(function()
            loadstring(game:HttpGet("https://pastebin.com/raw/ZjA3ETFR"))()
        end)
    end)

    MakeButton("üëª Noclip", function()
        noclip = not noclip
    end)

    -- ================ Canvas auto update =================
    local function UpdateCanvas()
        local contentY = UIGrid.AbsoluteContentSize.Y
        if contentY < Scroll.AbsoluteSize.Y then
            Scroll.CanvasSize = UDim2.new(0,0,0,Scroll.AbsoluteSize.Y)
        else
            Scroll.CanvasSize = UDim2.new(0,0,0,contentY + 12)
        end
    end
    UIGrid:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(UpdateCanvas)
    Scroll.Changed:Connect(function(prop) if prop == "AbsoluteSize" then UpdateCanvas() end end)
    task.spawn(UpdateCanvas)

    -- ================ Running behaviors: fly & noclip =================
    RunService.Heartbeat:Connect(function(dt)
        local char = player.Character
        if char and char:FindFirstChild("HumanoidRootPart") then
            if flying then
                local cam = workspace.CurrentCamera
                if cam then
                    local dir = cam.CFrame.LookVector
                    -- move by small steps scaled by dt to be less intrusive
                    pcall(function() char:TranslateBy(dir * (flySpeed * dt)) end)
                end
                if char:FindFirstChild("Humanoid") then
                    char.Humanoid.PlatformStand = true
                end
            else
                if char:FindFirstChild("Humanoid") then
                    char.Humanoid.PlatformStand = false
                end
            end

            if noclip then
                for _, part in ipairs(char:GetDescendants()) do
                    if part:IsA("BasePart") then
                        part.CanCollide = false
                    end
                end
            end
        end
    end)

    -- ================ TOGGLE MENU: multiple input handlers =================
    local function ToggleMenu()
        Panel.Visible = not Panel.Visible
        -- small visual flash
        pcall(function()
            MainButton = MainButton or MainButton
            local orig = MainButton.BackgroundColor3
            MainButton.BackgroundColor3 = Color3.fromRGB(55,55,55)
            task.delay(0.12, function() if MainButton and MainButton.Parent then MainButton.BackgroundColor3 = orig end)
        end)
    end

    -- Primary binds
    MainButton.MouseButton1Click:Connect(ToggleMenu)
    MainButton.Activated:Connect(ToggleMenu)

    -- Touch fallback: detect touches inside button bounds
    UIS.TouchStarted:Connect(function(touch, processed)
        if processed then return end
        local pos = touch.Position
        local absPos = MainButton.AbsolutePosition
        local absSize = MainButton.AbsoluteSize
        if pos.X >= absPos.X and pos.X <= absPos.X + absSize.X and pos.Y >= absPos.Y and pos.Y <= absPos.Y + absSize.Y then
            ToggleMenu()
        end
    end)

    -- Input fallback for some executors
    UIS.InputBegan:Connect(function(input, processed)
        if processed then return end
        if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
            local pos = input.Position
            local absPos = MainButton.AbsolutePosition
            local absSize = MainButton.AbsoluteSize
            if pos.X >= absPos.X and pos.X <= absPos.X + absSize.X and pos.Y >= absPos.Y and pos.Y <= absPos.Y + absSize.Y then
                ToggleMenu()
            end
        end
    end)

    -- ensure ZOrder stays high (some games reset Gui parent visuals)
    task.spawn(function()
        while Gui and Gui.Parent do
            pcall(function()
                Gui.Parent = player:FindFirstChild("PlayerGui") or Gui.Parent
            end)
            task.wait(3)
        end
    end)

    return Gui
end

-- =================== ANTI-DELETE BRUTO (N√≠vel 3) ===================
task.spawn(function()
    while true do
        -- se n√£o existir, recria IMEDIATO
        if not player or not player.Parent then break end
        local exists = pcall(function() return player.PlayerGui:FindFirstChild("VelozHub") end)
        if not exists or not player.PlayerGui:FindFirstChild("VelozHub") then
            pcall(CriarHub)
        end
        task.wait(0.9) -- intervalo curto pra reagir r√°pido, sem travar
    end
end)

-- cria inicialmente
pcall(CriarHub)

print("‚ö° VELOZ.HUB ‚Äî UNIVERSAL (ANTI-DELETE BRUTO) carregado.")

]])()
